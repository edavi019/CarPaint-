<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

'
    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please Select Your Vehicle Information"
        android:textSize="18sp"
        android:layout_margin="16dp"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Please Select Your Vehicle Year"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/sYear"
            android:layout_width="393dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="8dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Please Select Your Vehicle Make"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/sMake"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="8dip" />
        <!--android:entries="@array/makes" -->

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Please Select Your Vehicle Model"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/sModel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="20dip"
            android:layout_marginRight="8dip" />

        <Button
            android:id="@+id/btnRun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Vehicle Data"
            android:background="@drawable/buttonstylepink"
            android:textColor="#fff"
            android:layout_gravity="center"/>
    </LinearLayout>

    </RelativeLayout>
